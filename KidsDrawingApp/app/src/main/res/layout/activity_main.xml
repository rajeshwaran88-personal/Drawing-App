<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayOut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:padding="1dp"
        android:background="@drawable/drawing_view_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/colourPalette"
        >
        <ImageView
            android:id="@+id/backgroundImage"
            android:scaleType="centerCrop"
            android:contentDescription="background image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <com.example.kidsdrawingapp.DrawingView
            android:id="@+id/drawingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80FFFFFF" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/colourPalette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/actionButtons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayOut"
        >

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:contentDescription="colour_pallette"
            android:background="@color/skin"
            android:src="@drawable/pallette_normal"
            android:tag="@color/skin"
            android:onClick="colorClicked"
            />
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:contentDescription="colour_pallette"
            android:background="@color/black"
            android:src="@drawable/pallette_normal"
            android:tag="@color/black"
            android:onClick="colorClicked"
            />
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:contentDescription="colour_pallette"
            android:background="@color/red"
            android:src="@drawable/pallette_normal"
            android:tag="@color/red"
            android:onClick="colorClicked"
            />
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:contentDescription="colour_pallette"
            android:background="@color/green"
            android:src="@drawable/pallette_normal"
            android:tag="@color/green"
            android:onClick="colorClicked"
            />
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:contentDescription="colour_pallette"
            android:background="@color/blue"
            android:src="@drawable/pallette_normal"
            android:tag="@color/blue"
            android:onClick="colorClicked"
            />
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:contentDescription="colour_pallette"
            android:background="@color/yellow"
            android:src="@drawable/pallette_normal"
            android:tag="@color/yellow"
            android:onClick="colorClicked"
            />
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:contentDescription="colour_pallette"
            android:background="@color/cyan"
            android:src="@drawable/pallette_normal"
            android:tag="@color/cyan"
            android:onClick="colorClicked"
            />
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:contentDescription="colour_pallette"
            android:background="@color/lollipop"
            android:src="@drawable/pallette_normal"
            android:tag="@color/lollipop"
            android:onClick="colorClicked"
            />
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:contentDescription="colour_pallette"
            android:background="@color/random"
            android:src="@drawable/pallette_normal"
            android:tag="@color/random"
            android:onClick="colorClicked"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageButton
            android:id="@+id/ib_gallery"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_gallery"
            android:contentDescription="gallery"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            />

        <ImageButton
            android:id="@+id/ib_brush"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_brush"
            android:contentDescription="brush"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
        />
        <ImageButton
            android:id="@+id/ib_undo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_undo"
            android:contentDescription="undo"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            />

        <ImageButton
            android:id="@+id/ib_redo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_redo"
            android:contentDescription="redo"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            />

        <ImageButton
            android:id="@+id/ib_eraser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_eraser"
            android:contentDescription="eraser"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
        />
        <ImageButton
            android:id="@+id/ib_clr"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_clr"
            android:contentDescription="clear"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            />
        <ImageButton
            android:id="@+id/ib_save"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_save"
            android:contentDescription="save"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>